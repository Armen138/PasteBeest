doctype 5
html(lang="en")
    head
        title PasteBeest #{id}
        link(href='css/fontello.css', rel="stylesheet", type="text/css")
        link(rel="stylesheet", href="lib/codemirror.css")
        link(rel="stylesheet", href="theme/ambiance.css")
        link(rel="stylesheet", href="css/pastebeest.css")
        script var language = "#{language}", views = #{views};

    body(style="background-color: #22282A;padding:0;margin:0")
        #sidepanel
        #main
            form(action="/", method="POST")
                textarea#code(name='code') #{code}
                #bar
                    #menu(style="color:white;float:left;margin:6px")
                        i.icon-menu
                    button#new(value="new") new
                    select#language(name="language")
                    input#paste(type='submit', value='paste')
        script(src="lib/codemirror.js")
        script(src="http://code.jquery.com/jquery-1.10.1.min.js")
        script(src="min/pastebeest.min.js")
        script(src="mode/modes.min.js")
